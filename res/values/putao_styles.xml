<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Ptui.Layout"></style>

    <style name="Theme.Ptui.Layout.W_W" parent="@style/Theme.Ptui.Layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/putao_pt_deep_gray</item>
        <!-- <item name="android:layout_marginLeft">@dimen/putao_yp_home_listview_hot_icon_margin_left</item> -->
    </style>

    <style name="Theme.Ptui.Layout.F_W" parent="@style/Theme.Ptui.Layout.W_W">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Theme.Ptui.Layout.W_F" parent="@style/Theme.Ptui.Layout.W_W">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Theme.Ptui.Layout.F_F" parent="@style/Theme.Ptui.Layout.W_W">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Theme.Ptui.OrderItemKey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/putao_text_second_size</item>
    </style>

    <style name="Theme.Ptui.OrderItemValue" parent="@style/Theme.Ptui.OrderItemKey"></style>

    <style name="Theme.Ptui.YellowPageItem">

        <!-- <item name="android:layout_width">@dimen/putao_yp_item_width</item> -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/putao_text_color_primary</item>
        <item name="android:textSize">@dimen/putao_home_main_text_size</item>
        <item name="android:maxLines">1</item>
        <!-- <item name="android:padding">@dimen/putao_yp_item_padding</item> -->
    </style>

    <style name="Theme.Ptui.TagWidget"></style>

    <style name="Theme.Ptui.TagWidget.TabText" parent="@style/Theme.Ptui.TagWidget">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/putao_tab_indicator_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- 标题栏文字规范 -->
    <style name="Theme.Ptui.TitleBar"></style>

    <style name="Theme.Ptui.TitleBar.PrimaryText" parent="@style/Theme.Ptui.TitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/putao_text_color_primary</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Ptui.TitleBar.SecondText" parent="@style/Theme.Ptui.TitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/putao_text_color_primary</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 标题栏icon规范 -->
    <style name="Theme.Ptui.TitleBar.Icon" parent="@style/Theme.Ptui.TitleBar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="Theme.Ptui.CustomList"></style>

    <!-- 单行列表样式 -->
    <style name="Theme.Ptui.CustomList.SingleItem" parent="@style/Theme.Ptui.CustomList">
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:paddingRight">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:background">@drawable/putao_list_selecter_s</item>
    </style>
    
    <!-- 单行列表样式 非定高 -->
    <style name="Theme.Ptui.CustomList.SingleItem.RandomHeight" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/putao_listview_item_topbottompadding</item>
        <item name="android:paddingBottom">@dimen/putao_listview_item_topbottompadding</item>
        <item name="android:background">@drawable/putao_list_white_transblack_selector</item>
        <item name="android:paddingLeft">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:paddingRight">@dimen/putao_listview_item_leftrightpadding</item>
    </style>
    
    <!-- popupWindow单行列表样式 -->
    <style name="Theme.Ptui.CustomList.SingleItemPopupWindow" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:paddingLeft">@dimen/putao_popwin_listview_item_leftrightpadding</item>
        <item name="android:paddingRight">@dimen/putao_popwin_listview_item_leftrightpadding</item>
        <item name="android:background">@drawable/putao_list_selecter_s</item>
    </style>
    <!-- 单行列表主文字样式 -->
    <style name="Theme.Ptui.CustomList.SingleItemPrimaryText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0d0d0d</item>
    </style>
    <!-- 单行列表辅助文字样式 -->
    <style name="Theme.Ptui.CustomList.SingleItemSecondText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7B7B7B</item>
    </style>

    <!-- 两行列表样式 -->
    <style name="Theme.Ptui.CustomList.TwoItem" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:paddingLeft">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:paddingRight">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:background">@drawable/putao_list_selecter_s</item>
    </style>
    <!-- 两行列表主文字样式 -->
    <style name="Theme.Ptui.CustomList.TwoItemPrimaryText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0d0d0d</item>
    </style>
    <!-- 两行列表辅助文字样式 -->
    <style name="Theme.Ptui.CustomList.TwoItemSecondText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7B7B7B</item>
    </style>

    <style name="Theme.Ptui.CustomList.TwoItemTipText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/putao_text_color_second</item>
    </style>

    <!-- 三行列表样式 -->
    <style name="Theme.Ptui.CustomList.ThreeItem" parent="@style/Theme.Ptui.CustomList">
        <item name="android:minHeight">80dp</item>
        <item name="android:paddingLeft">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:paddingRight">@dimen/putao_listview_item_leftrightpadding</item>
        <item name="android:background">@drawable/putao_listview_item_selector</item>
    </style>
    <!-- 搜索列表item -->
    <style name="Theme.Ptui.CustomList.SearchItem" parent="@style/Theme.Ptui.CustomList.ThreeItem">
        <item name="android:minHeight">60dp</item>
    </style>
    <!-- 三行列表主文字样式 -->
    <style name="Theme.Ptui.CustomList.ThreeItemPrimaryText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#0d0d0d</item>
    </style>
    <!-- 三行列表辅助文字样式 -->
    <style name="Theme.Ptui.CustomList.ThreeItemSecondText" parent="@style/Theme.Ptui.CustomList">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7B7B7B</item>
    </style>

    <style name="Theme.Ptui.MenuItem"></style>

    <style name="Theme.Ptui.MenuItem.Layout" parent="@style/Theme.Ptui.MenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/putao_listview_item_selector</item>
    </style>

    <style name="Theme.Ptui.MenuItem.Text" parent="@style/Theme.Ptui.MenuItem">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">@dimen/putao_text_second_size</item>
        <item name="android:textColor">#4d4d4d</item>
    </style>

    <style name="Theme.Ptui.MenuItem.PointStyle" parent="@style/Theme.Ptui.MenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">48dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Ptui.AssistantGuideSeritemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/putao_text_color_second</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Ptui.Text"></style>

    <style name="Theme.Ptui.Text.Rect" parent="@style/Theme.Ptui.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Ptui.Text.Rect2" parent="@style/Theme.Ptui.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/putao_bg_state_red</item>
        <item name="android:textColor">@color/putao_white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Ptui.Text.Rect3" parent="@style/Theme.Ptui.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/putao_icon_movie_youhui</item>
        <item name="android:textColor">@color/putao_text_color_importance</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Ptui.Text.Rect4" parent="@style/Theme.Ptui.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">13dp</item>
        <item name="android:background">@drawable/putao_fuwujingxuan_jiage</item>
        <item name="android:textColor">#ff7d1f</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <!-- 绿色 -->
    <style name="Theme.Ptui.Text.Rect7" parent="@style/Theme.Ptui.Text.Rect">
        <item name="android:background">@drawable/putao_bg_state_green</item>
        <item name="android:textColor">@color/putao_white</item>
    </style>
    
    <style name="Theme.Ptui.Text.Rect8" parent="@style/Theme.Ptui.Text.Rect">
        <item name="android:background">#ff6633</item>
        <item name="android:textColor">@color/putao_white</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="Theme.Ptui.Text.Opencoupontip" parent="@style/Theme.Ptui.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/putao_goodsdetails_preferential</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <!-- 首页活动样式  start -->
    <style name="Theme.Ptui.Operate"></style>

    <style name="Theme.Ptui.Operate.BigLayoutPic" parent="@style/Theme.Ptui.Operate">
        <item name="android:layout_width">@dimen/putao_operate_big_layout_pic_width</item>
        <item name="android:layout_height">@dimen/putao_operate_big_layout_pic_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Theme.Ptui.Operate.BigLayoutTitle" parent="@style/Theme.Ptui.Operate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/putao_operate_big_layout_title_left_margin</item>
        <item name="android:layout_marginTop">@dimen/putao_operate_layout_title_top_margin</item>
        <item name="android:textSize">@dimen/putao_operate_layout_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.Ptui.Operate.BigLayoutSubtitle" parent="@style/Theme.Ptui.Operate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/putao_operate_big_layout_title_left_margin</item>
        <item name="android:layout_marginTop">@dimen/putao_operate_layout_title_bottom_margin</item>
        <item name="android:textSize">@dimen/putao_operate_layout_subtitle_size</item>
        <item name="android:textColor">@color/putao_text_color_second</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.Ptui.Operate.SmallLayoutTitle" parent="@style/Theme.Ptui.Operate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/putao_operate_layout_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/putao_operate_small_layout_title_left_margin</item>
    </style>

    <style name="Theme.Ptui.Operate.SmallLayoutSubtitle" parent="@style/Theme.Ptui.Operate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/putao_operate_layout_title_bottom_margin</item>
        <item name="android:textSize">@dimen/putao_operate_layout_subtitle_size</item>
        <item name="android:textColor">@color/putao_text_color_second</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/putao_operate_small_layout_title_left_margin</item>
    </style>

    <style name="Theme.Ptui.Operate.SmallLayoutPic" parent="@style/Theme.Ptui.Operate">
        <item name="android:layout_width">@dimen/putao_operate_small_layout_big_pic_width</item>
        <item name="android:layout_height">@dimen/putao_operate_small_layout_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!-- 首页活动样式 end -->

    <style name="Theme.Ptui.TextAppearance.LoginEdittext" parent="Theme.Ptui.TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:background">@color/putao_white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColorHint">@color/putao_text_color_secondary</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="Theme.Ptui.IndexTips">
        <item name="android:layout_marginTop">@dimen/putao_index_tip_margin_top</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/putao_white</item>
        <item name="android:gravity">center</item>
        <!-- <item name="android:background">@color/putao_theme</item> -->
        <item name="android:background">@drawable/putao_index_tips_bg</item>
    </style>

    <style name="Theme.Ptui.Widget" parent="@android:style/Widget"></style>

    <style name="Theme.Ptui.Widget.CirclePageIndicator" parent="@style/Theme.Ptui.Widget">
        <item name="centered">@bool/putao_default_circle_indicator_centered</item>
        <item name="fillColor">@color/putao_default_circle_indicator_fill_color</item>
        <item name="orientation">@integer/putao_default_circle_indicator_orientation</item>
        <item name="radius">@dimen/putao_default_circle_indicator_radius</item>
        <item name="snap">@bool/putao_default_circle_indicator_snap</item>
        <item name="strokeColor">@color/putao_default_circle_indicator_stroke_color</item>
