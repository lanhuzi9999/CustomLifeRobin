<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <LinearLayout
        android:id="@+id/putao_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putao_white"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/mainlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            style="@style/putao_ListStyle.Itembg.NoDivider"
            android:background="@color/putao_screen_background_light"
            >
        </ListView>

        <ListView
            android:id="@+id/sublist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="5dp" >
        </ListView>
    </LinearLayout>

    <View
        android:id="@+id/putao_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>