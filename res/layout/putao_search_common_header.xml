<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/putao_screen_background_light"
    android:orientation="vertical" >

    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <TextView
        android:id="@+id/search_title"
        style="@style/putao_yellow_page_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="@dimen/putao_offen_textview_margintop"
        android:layout_marginLeft="@dimen/putao_guess_like_title_margin_left"
        android:layout_marginTop="@dimen/putao_offen_textview_margintop"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/putao_about_us"
        android:textColor="@color/putao_pt_gray"
        android:textSize="@dimen/putao_tag_group_text_size" />

</LinearLayout>