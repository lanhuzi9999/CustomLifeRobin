<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/putao_translucent"
    android:descendantFocusability="afterDescendants" >

    <LinearLayout
        android:id="@+id/map_edit_addr_layout"
        android:layout_width="@dimen/putao_map_edit_phonenum_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/putao_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/putao_taxi_edit_addr_tip_layout_height" >

            <TextView
                android:id="@+id/title"
                style="@style/putao_List_SIGNLE_ITEM_PRIMARY_TEXT_STYLE"
                android:layout_centerInParent="true"
                android:textSize="18sp" >
            </TextView>
        </RelativeLayout>

        <View style="@style/putao_DividerStyle_Horizontal"/>
        
<!--         <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/putao_divider_line_size"
            android:background="@color/putao_pt_line_light_gray" /> -->

        <LinearLayout
            android:id="@+id/addr_confirm_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/putao_taxi_edit_addr_button_layout_height"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/cancel_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/putao_list_selecter_s"
                 >

                <TextView
                    style="@style/putao_List_SIGNLE_ITEM_PRIMARY_TEXT_STYLE"
                    android:layout_centerInParent="true"
                    android:text="@string/putao_cancel"
                    android:textSize="16sp" />
            </RelativeLayout>
            
            <View style="@style/putao_DividerStyle_Horizontal"/>
                    
<!--       		<View
	            android:layout_width="@dimen/putao_divider_line_size"
	            android:layout_height="fill_parent"
	            android:background="@color/putao_pt_line_light_gray" /> -->

            <RelativeLayout
                android:id="@+id/confirm_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/putao_list_selecter_s"
                 >

                <TextView
                    style="@style/putao_List_SIGNLE_ITEM_PRIMARY_TEXT_STYLE"
                    android:layout_centerInParent="true"
                    android:text="@string/putao_confirm"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>