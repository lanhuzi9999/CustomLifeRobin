<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putao_white"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/putao_open_srvcomtadd_star_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/putao_open_srvcomtadd_star_tip"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_text_second_size" />

        <RatingBar
            android:id="@+id/putao_open_srvcomtadd_star"
            style="@style/putao_ratingbar_style_large"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/putao_open_srvcomtadd_star_tip"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/putao_open_srvcomtadd_star_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/putao_open_srvcomtadd_star"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/putao_open_srvcomtadd_star"
            android:textColor="@color/putao_text_color_secondary"
            android:textSize="@dimen/putao_text_second_size" />
    </RelativeLayout>

    <View style="@style/putao_DividerStyle_Horizontal" />

    <View
        style="@style/putao_DividerStyle_Horizontal"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/putao_open_srvcomtadd_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putao_white"
        android:gravity="left|top"
        android:hint="@string/putao_open_srvcomtadd_content_hint"
        android:maxLength="140"
        android:minHeight="148dp"
        android:paddingLeft="@dimen/putao_activity_horizontal_margin"
        android:paddingRight="@dimen/putao_activity_horizontal_margin"
        android:paddingTop="@dimen/putao_activity_vertical_margin"
        android:textColorHint="@color/putao_text_color_secondary"
        android:textSize="@dimen/putao_text_second_size" />

    <View style="@style/putao_DividerStyle_Horizontal" />

    <Button
        android:id="@+id/putao_open_srvcomtadd_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/putao_activity_horizontal_margin"
        android:layout_marginRight="@dimen/putao_activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:text="@string/putao_open_srvcomtadd_commit" />

</LinearLayout>