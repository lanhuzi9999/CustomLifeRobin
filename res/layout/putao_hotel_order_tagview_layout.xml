<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/putao_activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:background="@drawable/putao_bg_card_fujin"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <include layout="@layout/putao_my_order_item_head" />

        <RelativeLayout
            android:id="@+id/orderlist_hotel_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:paddingBottom="16dp" >

            <TextView
                android:id="@+id/orderlist_hotel_roomname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/putao_white"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/orderlist_hotel_in_layout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/putao_hotelorderdetail_in"
                    android:textColor="#7fffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/orderlist_hotel_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/putao_white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/orderlist_hotel_in_layout"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/putao_hotelorderdetail_out"
                    android:textColor="#7fffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/orderlist_hotel_out_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/putao_white"
                    android:textSize="12dp" />
            </LinearLayout>
            <!-- <TextView -->
            <!-- android:id="@+id/orderlist_hotel_img" -->
            <!-- android:layout_width="72dp" -->
            <!-- android:layout_height="72dp" -->
            <!-- android:layout_alignParentBottom="true" -->
            <!-- android:layout_alignParentRight="true" -->
            <!-- android:background="@drawable/putao_a0114" -->
            <!-- android:gravity="center" -->
            <!-- android:scaleType="fitXY" -->
            <!-- android:textColor="#f1b131" -->
            <!-- android:textSize="48dp" /> -->

            <ImageView
                android:id="@+id/orderlist_hotel_img"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:scaleType="fitXY"
                android:contentDescription="@string/putao_about_us" />
        </RelativeLayout>

        <include layout="@layout/putao_my_order_item_foot" />
    </LinearLayout>

    <ImageView
        android:id="@+id/point"
        android:layout_width="@dimen/putao_activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/putao_icon_prompt_s"
        android:visibility="invisible" />

</LinearLayout>