<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/putao_category_item_width"
    android:layout_height="@dimen/putao_category_item_width"
    android:background="@drawable/putao_list_white_transblack_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/putao_service_img"
            android:layout_width="@dimen/putao_category_item_img_width"
            android:layout_height="@dimen/putao_category_item_img_width"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/putao_about_us" />

        <ViewStub
            android:id="@+id/remind_view_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/putao_service_img"
            android:layout="@layout/putao_remind_layout" />
    </RelativeLayout>

    <TextView
        android:id="@+id/putao_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/putao_text_color_primary"
        android:textSize="@dimen/putao_service_text_size" />

    <TextView
        android:id="@+id/putao_service_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/putao_category_content"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/putao_service_desc_text_size" />

</LinearLayout>