<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/putao_header_view" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#F5F4F2"
            android:paddingLeft="@dimen/putao_activity_horizontal_margin"
            android:paddingRight="@dimen/putao_activity_horizontal_margin" >

            <LinearLayout
                android:id="@+id/film_confirm_layout"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/film_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/putao_voucher_tip"
                    style="@style/putao_text_in_rect3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="@string/putao_movie_playlist_voucher_tip"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/film_confirm_layout"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/film_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/putao_text_color_primary"
                    android:textSize="@dimen/putao_text_primary_size" />

                <TextView
                    android:id="@+id/film_type"
                    style="@style/putao_text_in_rect"
                    android:layout_alignTop="@+id/film_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/film_name"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/film_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/film_name"
                    android:layout_below="@id/film_name"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/putao_text_color_second"
                    android:textSize="@dimen/putao_text_tertiary_size" />
            </RelativeLayout>
        </RelativeLayout>

        <View style="@style/putao_DividerStyle_Horizontal" />

        <LinearLayout
            android:id="@+id/film_seat"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#F5F4F2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/putao_activity_horizontal_margin"
            android:paddingRight="@dimen/putao_activity_horizontal_margin" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/putao_seat_select_none"
                android:textColor="@color/putao_text_color_second"
                android:textSize="@dimen/putao_text_tertiary_size" />
        </LinearLayout>

        <View style="@style/putao_DividerStyle_Horizontal" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/putao_white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#564c43"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/putao_seat_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/putao_can_select"
                        android:textColor="@color/putao_white"
                        android:textSize="@dimen/putao_text_tertiary_size" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/putao_seat_checked"
                        android:textSize="@dimen/putao_text_tertiary_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/putao_selected"
                        android:textColor="@color/putao_white"
                        android:textSize="@dimen/putao_text_tertiary_size" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/putao_seat_lock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/putao_sold"
                        android:textColor="@color/putao_white"
                        android:textSize="@dimen/putao_text_tertiary_size" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/putao_seat_lover" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/putao_seat_lover"
                        android:textColor="@color/putao_white"
                        android:textSize="@dimen/putao_text_tertiary_size" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/putao_seat_guodao"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/putao_seat_zl"
                        android:textColor="@color/putao_white"
                        android:textSize="@dimen/putao_text_tertiary_size"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#d0d0d0" />

                    <TextView
                        android:id="@+id/screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:background="@drawable/putao_seat_yingmo"
                        android:gravity="bottom"
                        android:textColor="@color/putao_white"
                        android:textSize="@dimen/putao_text_tertiary_size" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="#d0d0d0" />
                </LinearLayout>

                <so.contacts.hub.thirdparty.cinema.widget.SelectSeatView
                    android:id="@+id/select_seat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:textColor="@color/putao_text_color_second"
                    android:textSize="@dimen/putao_text_tertiary_size" />
            </LinearLayout>

            <so.contacts.hub.thirdparty.cinema.widget.SelectSeatThumView
                android:id="@+id/select_seat_small"
                android:layout_width="@dimen/putao_ss_seat_thum_size_w"
                android:layout_height="wrap_content"
                android:background="#bb333333"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <so.contacts.hub.widget.CommEmptyView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>