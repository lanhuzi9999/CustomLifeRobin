<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/putao_white"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/title"
        style="@style/putao_yellow_page_item"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="@dimen/putao_activity_horizontal_margin"
        android:layout_marginTop="@dimen/putao_offen_textview_margintop"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:text="@string/putao_main_navi_coupon"
        android:textColor="@color/putao_text_color_indicative"
        android:textSize="@dimen/putao_guess_like_desc_text_size" />

    <View style="@style/putao_DividerStyle_Horizontal"/>
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/coupon_image1"
        android:layout_width="@dimen/putao_home_coupon_width"
        android:layout_height="@dimen/putao_home_coupon_height"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_vertical"
         />

    <ImageView
        android:id="@+id/coupon_image2"
        android:layout_width="@dimen/putao_home_coupon_width"
        android:layout_height="@dimen/putao_home_coupon_height"
        android:layout_weight="1"
        android:scaleType="fitXY"
       	android:layout_marginLeft="4dp"
       	android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_vertical"
         />

    <ImageView
        android:id="@+id/coupon_image3"
        android:layout_width="@dimen/putao_home_coupon_width"
        android:layout_height="@dimen/putao_home_coupon_height"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="center_vertical"
   	/>

    </LinearLayout>
</LinearLayout>