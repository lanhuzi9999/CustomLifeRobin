<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/putao_voucher_center_bubble"
        android:layout_marginRight="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/putao_white"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:textSize="8dp"
        android:ems="1"
        android:text="@string/putao_voucher_center_recommend"
        android:background="@drawable/putao_icon_youhuiquan_tuijian" />

    <ImageView
        android:id="@+id/putao_voucher_center_img"
        android:layout_width="95dp"
        android:layout_height="68dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/putao_voucher_center_title"
        style="@style/putao_TextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/putao_voucher_center_img"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:textSize="@dimen/putao_text_second_size" />

    <TextView
        android:layout_marginTop="4dp"
        android:id="@+id/putao_voucher_center_desc"
        style="@style/putao_TextAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/putao_voucher_center_title"
        android:layout_below="@id/putao_voucher_center_title"
        android:singleLine="true"
        android:textColor="#9c9c9c"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_below="@id/putao_voucher_center_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignLeft="@id/putao_voucher_center_title"
        android:layout_alignBaseline="@id/putao_voucher_center_img"
        android:background="@drawable/putao_voucher_center_list_selector"
        android:id="@+id/putao_voucher_center_layout"
        android:orientation="horizontal" >

         <TextView
            android:id="@+id/putao_voucher_center_origprice"
            style="@style/putao_TextAppearanceMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:textColor="#f76d48"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/putao_voucher_center_getvoucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="@color/putao_white"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>