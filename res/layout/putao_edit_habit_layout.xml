<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putao_screen_background_light"
    android:orientation="vertical" 
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/putao_white"
            android:text="@string/putao_personal_hint_text"
            android:textColor="@color/putao_category_content"
            android:textSize="@dimen/putao_text_second_size" />

        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />
        
        <LinearLayout
            android:id="@+id/putao_name_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/putao_listview_item_leftrightpadding"
                android:text="@string/putao_personal_data_name"
                android:textColor="@color/putao_category_content"
                android:textSize="@dimen/putao_text_primary_size" />

            <EditText
                android:id="@+id/putao_name_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/putao_white"
                android:hint="@string/putao_personal_edit_hint"
                android:singleLine="true"
                android:textColor="@color/putao_text_color_primary"
                android:textColorHint="@color/putao_edit_text_hint_color"
                android:textSize="@dimen/putao_text_primary_size" />
        </LinearLayout>

        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

        <LinearLayout
            android:id="@+id/putao_phone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/putao_listview_item_leftrightpadding"
                android:text="@string/putao_personal_data_phone_number"
                android:textColor="@color/putao_category_content"
                android:textSize="@dimen/putao_text_primary_size" />

            <EditText
                android:id="@+id/putao_phone_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/putao_white"
                android:digits="1234567890"
                android:hint="@string/putao_personal_edit_hint"
                android:inputType="phone"
                android:maxLength="13"
                android:singleLine="true"
                android:textColor="@color/putao_text_color_primary"
                android:textColorHint="@color/putao_edit_text_hint_color"
                android:textSize="@dimen/putao_text_primary_size" />
        </LinearLayout>

        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

        <LinearLayout
            android:id="@+id/putao_qq_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/putao_listview_item_leftrightpadding"
                android:text="@string/putao_personal_data_qq_number"
                android:textColor="@color/putao_category_content"
                android:textSize="@dimen/putao_text_primary_size" />

            <EditText
                android:id="@+id/putao_qq_edittext"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/putao_white"
                android:hint="@string/putao_personal_edit_hint"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="13"
                android:textColor="@color/putao_text_color_primary"
                android:textColorHint="@color/putao_edit_text_hint_color"
                android:textSize="@dimen/putao_text_primary_size" />
        </LinearLayout>
        
        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />
        
        <View style="@style/putao_DividerStyle_Horizontal_Bottom" 
              android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/putao_listview_item_leftrightpadding"
                android:text="@string/putao_personal_data_common_address"
                android:textColor="@color/putao_category_content"
                android:textSize="@dimen/putao_text_primary_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/putao_home_addr_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/putao_white"
                android:textColor="@color/putao_text_color_primary"
                android:hint="@string/putao_personal_home_unset"
                android:textColorHint="@color/putao_edit_text_hint_color"
                android:textSize="@dimen/putao_text_primary_size" />

            <ImageView
                android:id="@+id/putao_home_addr_delete_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/putao_icon_list_cancel"
                android:visibility="visible" 
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/putao_company_addr_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="102dp"
                android:background="@color/putao_white"
                android:textColor="@color/putao_text_color_primary"
                android:hint="@string/putao_personal_company_unset"
                android:textColorHint="@color/putao_edit_text_hint_color"
                android:textSize="@dimen/putao_text_primary_size" />

            <ImageView
                android:id="@+id/putao_company_addr_delete_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/putao_icon_list_cancel"
                android:visibility="visible" 
                android:layout_marginRight="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/putao_more_addrs_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />
        
        <TextView
            android:background="@drawable/putao_list_white_transblack_selector"
            android:id="@+id/putao_add_addrs_layout"
            android:minHeight="56dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/putao_icon_add"
            android:drawablePadding="6dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="102dp"
            android:textColor="@color/putao_tab_text_color_selected"
            android:text="@string/putao_personal_add_addr" />
        
        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

        <LinearLayout
            android:id="@+id/putao_cars_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical" />

        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />
        
        <TextView
            android:id="@+id/putao_add_cars_layout"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:minHeight="56dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/putao_icon_add"
            android:drawablePadding="6dp"
            android:gravity="left|center_vertical"
            android:paddingLeft="102dp"
            android:textColor="@color/putao_tab_text_color_selected"
            android:text="@string/putao_personal_add_car" />
        <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

     <!--    <Button
            android:id="@+id/putao_save_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/putao_personal_edit_done" /> -->
    </LinearLayout>

</ScrollView>