<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/putao_app_bg" >

        <include layout="@layout/putao_header_view" />
    </RelativeLayout>

    <so.contacts.hub.ui.yellowpage.tag.TitleIndicator
        android:id="@+id/pagerindicator"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_tag_bar_height_short"
        android:background="@color/putao_theme"
        app:tag_footerColor="@color/putao_tab_indicator_text_selected"
        app:tag_footerLineHeight="@dimen/putao_tag_bar_footerLineHeight"
        app:tag_footerLineWidth="@dimen/putao_tag_bar_width"
        app:tag_footerTriangleHeight="@dimen/putao_tag_bar_footerTriangleHeight"
        app:tag_onTouchStyle="1"
        app:tag_textColor="@color/putao_tab_indicator_text"
        app:tag_textSizeNormal="@dimen/putao_common_text_size_small_3"
        app:tag_textSizeSelected="@dimen/putao_common_text_size_small_3" />

    <!-- Don't set background for ViewPager. It doesn't work because of page margin -->

    <so.contacts.hub.ui.yellowpage.tag.ViewPagerCompat
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:duplicateParentState="true" />

    <View 
        android:id="@+id/putao_flight_divider"
        style="@style/putao_DividerStyle_Horizontal"/>
    
<!--     <View
        android:id="@+id/putao_flight_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:background="@color/putao_yellow_page_line_color" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal" >

        <TextView
            android:textColor="#7892ad"
            android:id="@+id/putao_flight_jiage_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/putao_icon_plane_jiage"
            android:background="@drawable/putao_list_white_transblack_selector"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/putao_flight_jiage"
            android:textSize="14sp" />

        <View style="@style/putao_DividerStyle_Vertical"/>
        
<!--         <View
            android:layout_width="@dimen/putao_divider_line_size"
            android:layout_height="match_parent"
            android:background="@color/putao_yellow_page_line_color" /> -->

        <TextView
            android:textColor="#7892ad"
            android:id="@+id/putao_flight_tejia_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:background="@drawable/putao_list_white_transblack_selector"
            android:layout_weight="1"
            android:drawableTop="@drawable/putao_icon_plane_tejia"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="@string/putao_flight_tejia"
            android:textSize="14sp" />
        
        <View style="@style/putao_DividerStyle_Vertical"/>

<!--         <View
            android:layout_width="@dimen/putao_divider_line_size"
            android:layout_height="match_parent"
            android:background="@color/putao_yellow_page_line_color" /> -->

        <TextView
            android:layout_width="0dp"
            android:id="@+id/putao_flight_hangban_tv"
             android:background="@drawable/putao_list_white_transblack_selector"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/putao_icon_plane_hangban"
            android:gravity="center"
            android:paddingTop="5dp"
            android:textColor="#7892ad"
            android:text="@string/putao_flight_hangban"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>