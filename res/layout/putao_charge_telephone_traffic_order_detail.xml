<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/putao_order_detail_margin_top" >

        <LinearLayout
            android:id="@+id/order_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/putao_order_detail_margin_top"
            android:layout_marginLeft="@dimen/putao_order_list_head_margin"
            android:layout_marginRight="@dimen/putao_order_list_head_margin"
            android:layout_marginTop="@dimen/putao_order_detail_margin_top"
            android:background="@drawable/putao_bg_card_jipiao"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/putao_order_list_head_height"
                android:layout_marginLeft="@dimen/putao_order_list_head_margin"
                android:layout_marginRight="@dimen/putao_order_list_head_margin"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/order_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/putao_icon_btn_id_chazhi" />

                <TextView
                    android:id="@+id/order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical"
                    android:text="话费充值"
                    android:textColor="@color/putao_white"
                    android:textSize="@dimen/putao_text_size_d" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/putao_order_list_content_height" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/putao_order_list_head_margin"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putao_order_list_content_color"
                        android:textSize="@dimen/putao_text_size_a" />

                    <TextView
                        android:id="@+id/order_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putao_order_list_subcontent_color"
                        android:textSize="@dimen/putao_text_size_d" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/operator_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/putao_order_list_head_margin" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/putao_order_list_foot_height"
                android:layout_marginLeft="@dimen/putao_order_list_head_margin"
                android:layout_marginRight="@dimen/putao_order_list_head_margin" >

                <TextView
                    android:id="@+id/payed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/putao_text_color_second"
                    android:textSize="@dimen/putao_text_size_d" />

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/putao_order_list_title_color"
                    android:textSize="@dimen/putao_text_size_d" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/server_provider_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_subject"
            android:layout_marginLeft="@dimen/putao_order_list_head_margin"
            android:layout_marginRight="@dimen/putao_order_list_head_margin"
            android:layout_marginTop="@dimen/putao_order_detail_margin_top"
            android:background="@drawable/putao_bg_list_card"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/putao_order_detail_margin_top"
                android:layout_marginLeft="@dimen/putao_order_list_head_margin"
                android:layout_marginRight="@dimen/putao_order_list_head_margin"
                android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单状态"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:text="支付金额"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:text="订单编号"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:text="创建时间"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_create_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/putao_DividerStyle_Horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                 />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/putao_order_detail_margin_top"
                android:layout_marginLeft="@dimen/putao_order_list_head_margin"
                android:layout_marginRight="@dimen/putao_order_list_head_margin"
                android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品类型"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:text="充值号码"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/order_product_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/order_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/putao_order_detail_margin_top"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

           <!--  <View style="@style/putao_MyItemLineStyle_fill" />  -->

