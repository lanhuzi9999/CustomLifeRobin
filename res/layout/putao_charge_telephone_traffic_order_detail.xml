            </LinearLayout>

            <include
                android:id="@+id/order_pay"
                layout="@layout/putao_card_item_click" />

            <include
                android:id="@+id/order_cancel"
                layout="@layout/putao_card_item_click" />

            <include
                android:id="@+id/order_query"
                android:visibility="gone"
                layout="@layout/putao_card_item_click" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>