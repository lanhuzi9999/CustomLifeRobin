<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/putao_add_car_layout"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:background="@drawable/putao_listview_item_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="50dp" >

        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/putao_icon_weizhang_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/putao_traffic_offence_add_car"
            android:textColor="@color/putao_text_color_second"
            android:textSize="14sp" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/putao_traffic_offence_add_car_hint"
            android:textColor="@color/putao_text_color_secondary"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>