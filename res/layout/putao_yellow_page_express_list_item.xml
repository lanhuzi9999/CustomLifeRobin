<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/putao_list_selecter_s"
    android:orientation="vertical" >

    
	<TextView 
        android:id="@+id/category_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textSize="@dimen/putao_listview_secondline_textsize"
        android:textColor="#7f7f7f"
        android:visibility="gone"
        android:background="@color/putao_screen_background_light"/>
    <TextView 
        android:id="@+id/city_name"
        android:layout_width="fill_parent"
        android:layout_height="53dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/putao_listview_firstline_textsize"
        android:textColor="@color/putao_black"/>
    
    <View style="@style/putao_DividerStyle_Horizontal"
        android:id="@+id/divider"
        />
    
