<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/putao_popup_bg"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/putao_dialog_leftandright_padding"
    android:paddingLeft="@dimen/putao_dialog_leftandright_padding"
    android:paddingRight="@dimen/putao_dialog_leftandright_padding" >

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/putao_dialog_head_height"
        android:gravity="center"
        android:textColor="@color/putao_dialog_title"
        android:textSize="@dimen/putao_dialog_head_textsize" />

    <View
        style="@style/putao_DividerStyle_Horizontal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/putao_dialog_leftandright_padding"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/putao_dialog_leftandright_padding"
        android:paddingRight="@dimen/putao_dialog_leftandright_padding"
        android:textColor="@color/putao_dialog_content"
        android:textSize="@dimen/putao_dialog_content_textsize"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview"
        style="@style/putao_ListStyle.Itembg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <!-- <View style="@style/putao_DividerStyle_Horizontal" /> -->

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/putao_dialog_bottom_btn_height"
            android:layout_marginRight="@dimen/putao_dialog_leftandright_padding"
            android:layout_marginTop="@dimen/putao_dialog_leftandright_padding"
            android:layout_weight="1"
            android:background="@drawable/putao_express_history_btn_bg"
            android:gravity="center"
            android:text="@string/putao_cancel"
            android:textColor="@color/putao_text_color_primary"
            android:textSize="@dimen/putao_dialog_bottom_btn_textsize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/putao_dialog_bottom_btn_height"
            android:layout_marginTop="@dimen/putao_dialog_leftandright_padding"
            android:layout_weight="1"
            android:background="@drawable/putao_express_history_btn_bg"
            android:gravity="center"
            android:text="@string/putao_confirm"
            android:textColor="@color/putao_text_color_primary"
            android:textSize="@dimen/putao_dialog_bottom_btn_textsize"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>