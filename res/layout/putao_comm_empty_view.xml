<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/empty_desc_imv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/putao_empty_view_icon_and_text_padding"
        android:scaleType="center"
        android:src="@drawable/putao_icon_coolui_empty" />

    <TextView
        android:id="@+id/empty_desc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty_desc_imv"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/putao_activity_horizontal_margin"
        android:paddingRight="@dimen/putao_activity_horizontal_margin"
        android:text="@string/putao_netexception_hint"
        android:textColor="@color/putao_empty_tip_text"
        android:textSize="@dimen/putao_empty_tip_text_size" />

</RelativeLayout>