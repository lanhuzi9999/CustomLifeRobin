<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp" >

        <LinearLayout
            android:id="@+id/mcontainer"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/putao_activity_horizontal_margin"
            android:layout_marginRight="@dimen/putao_activity_horizontal_margin"
            android:background="@drawable/putao_bg_list_card"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/putao_activity_horizontal_margin"
                android:layout_marginRight="@dimen/putao_activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="@string/putao_weather_detail"
                android:textColor="#bdbdbd"
                android:textSize="@dimen/putao_text_size_d" />

            <View style="@style/putao_DividerStyle_Horizontal"
                android:layout_height="0.6dp"
                />
            
<!--             <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#e0e0e0" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/putao_weather_wear"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/putao_text_size_d" />

                        <TextView
                            android:id="@+id/weather_wear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/putao_text_color_second"
                            android:textSize="@dimen/putao_text_size_b" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/putao_card_tianqi_fz" />
                </LinearLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/putao_weather_wash_car"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/putao_text_size_d" />

                        <TextView
                            android:id="@+id/weather_wash_car"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/putao_text_color_second"
                            android:textSize="@dimen/putao_text_size_b" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/putao_card_tianqi_xc" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/putao_DividerStyle_Horizontal"
                android:layout_height="0.6dp"
                />
            
<!--             <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#e0e0e0" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/putao_weather_trip"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/putao_text_size_d" />

                        <TextView
                            android:id="@+id/weather_trip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/putao_text_color_second"
                            android:textSize="@dimen/putao_text_size_b" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/putao_card_tianqi_ly" />
                </LinearLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/putao_weather_cold"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/putao_text_size_d" />

                        <TextView
                            android:id="@+id/weather_cold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/putao_text_color_second"
                            android:textSize="@dimen/putao_text_size_b" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/putao_card_tianqi_gm" />
                </LinearLayout>
            </LinearLayout>

            <View 
                android:layout_height="0.6dp"
                style="@style/putao_DividerStyle_Horizontal"/>
            
<!--             <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#e0e0e0" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/putao_weather_sport"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/putao_text_size_d" />

                        <TextView
                            android:id="@+id/weather_sport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/putao_text_color_second"
                            android:textSize="@dimen/putao_text_size_b" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/putao_card_tianqi_yd" />
                </LinearLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="50dp"
                    android:layout_weight="0"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/putao_weather_sun"
                            android:textColor="#bdbdbd"
                            android:textSize="@dimen/putao_text_size_d" />

                        <TextView
                            android:id="@+id/weather_sun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="@color/putao_text_color_second"
                            android:textSize="@dimen/putao_text_size_b" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/putao_card_tianqi_zwx" />
                </LinearLayout>
            </LinearLayout>

            <View 
                android:layout_height="0.6dp"
                style="@style/putao_DividerStyle_Horizontal"/>            
            
<!--             <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#e0e0e0" /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="@dimen/putao_activity_horizontal_margin"
                android:layout_marginRight="@dimen/putao_activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="@string/putao_weather_other_day"
                android:textColor="#bdbdbd"
                android:textSize="@dimen/putao_text_size_d" />

            <View 
                android:layout_height="0.6dp"
                style="@style/putao_DividerStyle_Horizontal"/>            
            
<!--             <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:background="#e0e0e0" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/second_weather_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/second_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putao_text_color_second"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/second_weather_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/second_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/putao_text_color_second"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/third_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putao_text_color_second"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/third_weather_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/third_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/putao_text_color_second"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="0.66dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:background="#e0e0e0" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/fourth_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/putao_text_color_second"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/fourth_weather_logo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/fourth_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/putao_text_color_second"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/share_weather"
                layout="@layout/putao_card_item_click" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>