<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/putao_activity_horizontal_margin"
        android:paddingRight="@dimen/putao_activity_horizontal_margin" >

        <FrameLayout
            android:id="@+id/putao_voucher_container"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" >
        </FrameLayout>

        <LinearLayout
            android:id="@+id/putao_voucher_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/putao_bg_list_card"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="@dimen/putao_activity_horizontal_margin"
            android:paddingRight="@dimen/putao_activity_horizontal_margin" >
        </LinearLayout>

        <TextView
            android:id="@+id/putao_btn_use_immediately"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:gravity="center"	
            android:layout_marginTop="16dp"
            android:background="@drawable/putao_click_btn_bg"
            android:minHeight="@dimen/putao_button_height"
            android:text="@string/putao_voucher_detail_btn_text"
            android:textColor="@color/putao_btn_text_color"
            android:visibility="gone"
            android:textSize="@dimen/putao_btn_text_size" />
    </LinearLayout>

</ScrollView>