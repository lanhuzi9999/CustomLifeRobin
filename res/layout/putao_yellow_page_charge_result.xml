<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/charge_result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/charge_stuats_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/putao_chargetel_result_paddingleft"
            android:paddingTop="@dimen/putao_chargetel_result_paddingtop" >

            <ImageView
                android:id="@+id/charge_result_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/putao_icon_checkbox_s" />

            <TextView
                android:id="@+id/charge_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/putao_chargetel_result_paddingleft"
                android:text="@string/putao_charge_deal_success"
                android:textSize="@dimen/putao_chargetel_result_result_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/charge_result_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#dedede"
            android:paddingBottom="@dimen/putao_chargetel_result_paddingbottom"
            android:paddingLeft="57dp"
            android:paddingTop="5dp"
            android:text="@string/putao_charge_deal_success_hint"
            android:textColor="@color/putao_pt_deep_gray"
            android:textSize="@dimen/putao_chargetel_result_small_textsize" />

        <LinearLayout
            android:id="@+id/charge_result_serial_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/putao_chargetel_result_paddingleft"
                android:text="@string/putao_charge_serialnum_hint"
                android:textColor="@color/putao_pt_deep_gray"
                android:textSize="@dimen/putao_chargetel_result_small_textsize" />

            <TextView
                android:id="@+id/charge_result_serialnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="26dp"
                android:textColor="@color/putao_contents_text"
                android:textSize="@dimen/putao_chargetel_result_big_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/putao_chargetel_result_paddingtop" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/putao_chargetel_result_paddingleft"
                android:text="@string/putao_charge_phonenum_hint"
                android:textColor="@color/putao_pt_deep_gray"
                android:textSize="@dimen/putao_chargetel_result_small_textsize" />

            <TextView
                android:id="@+id/charge_result_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="37dp"
                android:textColor="@color/putao_contents_text"
                android:textSize="@dimen/putao_chargetel_result_big_textsize" />

            <TextView
                android:id="@+id/charge_result_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/putao_contents_text"
                android:textSize="@dimen/putao_chargetel_result_big_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="@dimen/putao_chargetel_result_paddingtop" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/putao_chargetel_result_paddingleft"
                android:text="@string/putao_charge_money_hint"
                android:textColor="@color/putao_pt_deep_gray"
                android:textSize="@dimen/putao_chargetel_result_small_textsize" />

            <TextView
                android:id="@+id/charge_result_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="37dp"
                android:textColor="@color/putao_contents_text"
                android:textSize="@dimen/putao_chargetel_result_big_textsize" />
        </LinearLayout>

        <View style="@style/putao_DividerStyle_Horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            />
        
<!--         <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/putao_divider_line_size"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="#dcdcdc" /> -->

        <TextView
            android:id="@+id/charge_result_success_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/putao_black"
            android:textSize="35sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="@string/putao_charge_question"/>

</RelativeLayout>