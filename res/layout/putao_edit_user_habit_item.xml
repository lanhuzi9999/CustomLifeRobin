<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/putao_list_white_transblack_selector"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/putao_edit_habit_item_label_textview"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/putao_listview_item_leftrightpadding"
            android:text="@string/putao_personal_data_common_address"
            android:textColor="@color/putao_category_content"
            android:textSize="@dimen/putao_text_primary_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/putao_edit_habit_item_content_textview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/putao_white"
            android:gravity="center_vertical"
            android:textColor="@color/putao_text_color_primary"
            android:textColorHint="@color/putao_edit_text_hint_color"
            android:textSize="@dimen/putao_text_primary_size" />

        <ImageView
            android:id="@+id/putao_edit_habit_item_delete_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/putao_icon_list_cancel"
            android:visibility="visible" 
            android:layout_marginRight="16dp"/>
    </LinearLayout>

</LinearLayout>