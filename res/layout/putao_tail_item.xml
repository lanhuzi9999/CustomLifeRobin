    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="48dp"
     >
	    <ImageView
	        android:id="@+id/search_more_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="16dp"
	        android:src="@drawable/putao_icon_search_more"
	        android:layout_centerVertical="true"
	         />
	    
	    <TextView
			android:id="@+id/search_more_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/putao_search_more"
	        android:text="@string/putao_tail_tip"
	        android:textSize="14sp"
	        android:layout_toRightOf="@+id/search_more_icon"
	        android:layout_marginLeft="8dp"
	        android:layout_centerVertical="true"
	         />
	    
		</RelativeLayout>

</RelativeLayout>