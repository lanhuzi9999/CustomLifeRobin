<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/putao_List_THREE_ITEM_Style"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/item_pic"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/putao_about_us"
        android:src="@drawable/putao_bg_pic_dianying" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_pic"
        android:layout_marginLeft="@dimen/putao_listview_item_imgcontentgap"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_name"
            style="@style/putao_List_THREE_ITEM_PRIMARY_TEXT_STYLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/item_status"
            style="@style/putao_List_THREE_ITEM_SECOND_TEXT_STYLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/item_date"
            style="@style/putao_List_THREE_ITEM_SECOND_TEXT_STYLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

</RelativeLayout>