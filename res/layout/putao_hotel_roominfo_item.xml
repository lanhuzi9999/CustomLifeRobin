<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/putao_list_selecter_s"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp" >

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="@dimen/putao_hotel_img_size"
        android:layout_height="@dimen/putao_hotel_img_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/putao_about_us"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/item_middle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_right_content"
        android:layout_toRightOf="@+id/item_img"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="left"
            android:textColor="@color/putao_text_color_primary"
            android:textSize="@dimen/putao_listview_firstline_textsize" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/putao_text_color_second"
                android:textSize="@dimen/putao_listview_secondline_textsize" />

            <TextView
                android:id="@+id/item_bed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/putao_text_color_second"
                android:textSize="@dimen/putao_listview_secondline_textsize" />
        </LinearLayout>

        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/item_danbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/putao_bg_state_orange"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/putao_white"
            android:textSize="@dimen/putao_listview_secondline_textsize"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_li"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/putao_hoteldetail_present"
            style="@style/putao_text_in_rect"
             />
         </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:gravity="right"
            android:layout_gravity="right|center_vertical" >

            <TextView
                android:id="@+id/item_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/putao_text_color_importance"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_hotel_book_btn"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/putao_btn_list_green"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:text="@string/putao_hotelorder_order"
                android:textColor="@color/putao_white"
                android:textSize="@dimen/putao_listview_firstline_textsize" />

        </LinearLayout>

<!--         <TextView
            android:id="@+id/item_money_kefan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="可返￥329"
            android:textColor="@color/putao_text_color_second"
            android:textSize="12sp" /> -->

       
    </LinearLayout>

</RelativeLayout>