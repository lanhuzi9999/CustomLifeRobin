<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/putao_tv_title"
        style="@style/putao_List_SIGNLE_ITEM_SECOND_TEXT_STYLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/putao_tv_name"
        style="@style/putao_List_SIGNLE_ITEM_SECOND_TEXT_STYLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:visibility="gone"
            android:id="@+id/putao_voucher_copy_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/putao_text_color_green"
            android:textSize="14sp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:text="@string/putao_voucher_copy" />
    </LinearLayout>

</LinearLayout>