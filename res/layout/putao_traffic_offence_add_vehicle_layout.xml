<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:orientation="vertical" >

    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <LinearLayout
        android:id="@+id/carnum_layout"
        style="@style/putao_List_SINGLE_ITEM_Style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/putao_list_white_transblack_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/putao_traffic_offence_car_no"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_text_primary_size" />

        <TextView
            android:id="@+id/province_code"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:drawableRight="@drawable/putao_icon_list_show"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:drawablePadding="2dp"
            android:textColor="@color/putao_tab_text_color_selected"
            android:background="@drawable/putao_bg_list_card"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/car_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:background="@color/putao_white"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="@string/putao_traffic_offence_car_no_hint"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/putao_tab_text_color_selected"
            android:textColorHint="@color/putao_edit_text_hint_color"
            android:textSize="@dimen/putao_text_primary_size" />
    </LinearLayout>

   <!--  <View
        android:id="@+id/putao_engine_divider"
        style="@style/putao_DividerStyle_Horizontal_Bottom" 
        android:visibility="gone"/> -->
    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <LinearLayout
        android:id="@+id/engine_layout"
        style="@style/putao_List_SINGLE_ITEM_Style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/putao_list_white_transblack_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/putao_traffic_offence_engine_num"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_text_primary_size" />

        <EditText
            android:id="@+id/engine_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/putao_white"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="@string/putao_traffic_offence_engine_num_hint"
            android:singleLine="true"
            android:textColor="@color/putao_tab_text_color_selected"
            android:textColorHint="@color/putao_edit_text_hint_color"
            android:textSize="@dimen/putao_text_primary_size" />

        <ImageView
            android:id="@+id/vehicle_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/putao_icon_list_tips" />
    </LinearLayout>

    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <LinearLayout
        android:id="@+id/vin_layout"
        style="@style/putao_List_SINGLE_ITEM_Style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/putao_list_white_transblack_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/putao_traffic_offence_body_num"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_text_primary_size" />

        <EditText
            android:id="@+id/vin_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/putao_white"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="@string/putao_traffic_offence_body_num_hint"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/putao_tab_text_color_selected"
            android:textColorHint="@color/putao_edit_text_hint_color"
            android:textSize="@dimen/putao_text_primary_size" />

        <ImageView
            android:id="@+id/vehicle_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/putao_icon_list_tips"
            android:scaleType="fitCenter" />
    </LinearLayout>
    
    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <View
        style="@style/putao_DividerStyle_Horizontal_Bottom"
        android:layout_marginTop="11dp" />
	
	<LinearLayout
        android:id="@+id/region_layout"
        style="@style/putao_List_SINGLE_ITEM_Style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/putao_list_white_transblack_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/putao_traffic_offence_region"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_text_primary_size" />

        <TextView
            android:id="@+id/vehicle_region"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="@string/putao_traffic_offence_region_hint"
            android:singleLine="true"
            android:textColor="@color/putao_tab_text_color_selected"
            android:textColorHint="@color/putao_edit_text_hint_color"
            android:textSize="@dimen/putao_text_primary_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/putao_card_all_show" />
    </LinearLayout>
    
    <View
        android:id="@+id/putao_vcode_divider"
        style="@style/putao_DividerStyle_Horizontal_Bottom" 
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/putao_vcode_layout"
        style="@style/putao_List_SINGLE_ITEM_Style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/putao_list_white_transblack_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="@string/putao_traffic_offence_vcode"
            android:textColor="@color/putao_text_color_second"
            android:textSize="@dimen/putao_text_primary_size" />

        <EditText
            android:id="@+id/putao_vcode_num_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/putao_white"
            android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:gravity="center_vertical"
            android:hint="@string/putao_traffic_offence_vcode_hint"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/putao_tab_text_color_selected"
            android:textColorHint="@color/putao_edit_text_hint_color"
            android:textSize="@dimen/putao_text_primary_size" />

        <ImageView
            android:id="@+id/putao_vcode_imageview"
            android:layout_width="87dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY" />
    </LinearLayout>

    <View style="@style/putao_DividerStyle_Horizontal_Bottom" />

    <Button
        android:id="@+id/vehicle_info_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/putao_traffic_offence_add"
        android:textColor="@color/putao_white"
        android:textSize="16sp" >
    </Button>

</LinearLayout>