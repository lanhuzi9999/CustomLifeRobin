<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/putao_activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:background="@drawable/putao_bg_card_huochepiao"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <include layout="@layout/putao_my_order_item_head" />

        <RelativeLayout
            android:id="@+id/orderlist_train_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/putao_order_list_content_height" >

            <LinearLayout
                android:id="@+id/orderlist_train_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/train_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#0d0d0d"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/train_from_pinyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/putao_dark_white"
                    android:textSize="10dp" />

                <!-- <TextView -->
                <!-- android:id="@+id/train_from_data" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_gravity="center_vertical" -->
                <!-- android:ellipsize="end" -->
                <!-- android:paddingTop="10dp" -->
                <!-- android:singleLine="true" -->
                <!-- android:textColor="@color/putao_order_list_subcontent_color" -->
                <!-- android:text="12月13" -->
                <!-- android:textSize="12dp" -->
                <!-- android:visibility="gone"/> -->


                <!-- <TextView -->
                <!-- android:id="@+id/train_from_time" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_gravity="center_vertical" -->
                <!-- android:ellipsize="end" -->
                <!-- android:singleLine="true" -->
                <!-- android:textColor="@color/putao_order_list_subcontent_color" -->
                <!-- android:text="7:30" -->
                <!-- android:textSize="12dp" -->
                <!-- android:visibility="gone"/> -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/orderlist_train_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/putao_icon_btn_id_huoche_a"
                    android:contentDescription="@string/putao_about_us" />

                <TextView
                    android:id="@+id/train_from_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="12月13"
                    android:textColor="@color/putao_order_list_subcontent_color"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/train_from_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="7:30"
                    android:textColor="@color/putao_order_list_subcontent_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/orderlist_train_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/train_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#0d0d0d"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/train_to_pinyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/putao_dark_white"
                    android:textSize="10dp" />

                <!-- <TextView -->
                <!-- android:id="@+id/train_to_data" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_gravity="right" -->
                <!-- android:ellipsize="end" -->
                <!-- android:paddingTop="10dp" -->
                <!-- android:singleLine="true" -->
                <!-- android:textColor="#7fffffff" -->
                <!-- android:textSize="12dp" -->
                <!-- android:visibility="gone" /> -->


                <!-- <TextView -->
                <!-- android:id="@+id/train_to_time" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_gravity="right" -->
                <!-- android:ellipsize="end" -->
                <!-- android:singleLine="true" -->
                <!-- android:textColor="#7fffffff" -->
                <!-- android:textSize="12sp" -->
                <!-- android:visibility="gone" /> -->
            </LinearLayout>
        </RelativeLayout>

        <include
            android:layout_width="match_parent"
            android:layout_height="@dimen/putao_order_list_foot_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            layout="@layout/putao_my_order_item_foot" />
    </LinearLayout>

    <ImageView
        android:id="@+id/point"
        android:layout_width="@dimen/putao_activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/putao_icon_prompt_s"
        android:visibility="invisible" />

</LinearLayout>