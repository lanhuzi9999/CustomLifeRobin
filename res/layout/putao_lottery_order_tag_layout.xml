<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/putao_activity_horizontal_margin" >

     <LinearLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_weight="1"
        android:background="@drawable/putao_bg_card_caipiao"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <include layout="@layout/putao_my_order_item_head" />

        <RelativeLayout
            android:id="@+id/orderlist_hotel_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:paddingBottom="16dp" >

            <TextView
                android:id="@+id/lottery_result_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/putao_lottery_card_lottery_result"
                android:textColor="@color/putao_order_list_title_color"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/lottery_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/putao_order_list_content_color"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/orderlist_lottery_buy_layout"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lottery_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/putao_lottery_card_lottery_time"
                    android:textColor="@color/putao_order_list_title_color"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/lottery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/putao_order_list_content_color"
                    android:textSize="12dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/orderlist_hotel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/putao_icon_btn_id_caipiao_a"
                android:contentDescription="@string/putao_about_us" />
        </RelativeLayout>

        <include layout="@layout/putao_my_order_item_foot" />
    </LinearLayout>

    <ImageView
        android:id="@+id/point"
        android:layout_width="@dimen/putao_activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/putao_icon_prompt_s"
        android:visibility="invisible" />

</LinearLayout>