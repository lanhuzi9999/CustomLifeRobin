<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/putao_activity_horizontal_margin" >

    <LinearLayout
        android:layout_height="160dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/putao_bg_card_tianqi"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <include layout="@layout/putao_my_order_item_head" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:paddingBottom="16dp" >

            <TextView
                android:id="@+id/weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/weather_pic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/putao_icon_tianqi_dayu_s"
                android:gravity="center"
                android:textColor="#f1b131"
                android:textSize="48dp" />

            <LinearLayout
                android:id="@+id/tp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/putao_weather_temperature"
                    android:textColor="#7fffffff"
                    android:textSize="@dimen/putao_text_tertiary_size" />

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/putao_weather_temperature"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/putao_text_tertiary_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/tp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/putao_weather_air"
                    android:textColor="#7fffffff"
                    android:textSize="@dimen/putao_text_tertiary_size" />

                <TextView
                    android:id="@+id/air"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/putao_weather_air"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/putao_text_tertiary_size" />
            </LinearLayout>
        </RelativeLayout>

        <include layout="@layout/putao_my_order_item_foot" />
    </LinearLayout>

    <ImageView
        android:id="@+id/point"
        android:layout_width="@dimen/putao_activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/putao_icon_prompt_s"
        android:visibility="invisible" />

</LinearLayout>