<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/putao_header_view" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@id/list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:listSelector="@color/putao_transparent"
			android:divider="@color/putao_yellow_page_line_color"
			android:dividerHeight="0.66dp"
            android:paddingBottom="10dp" />

        <include
            android:id="@+id/my_nodata_layout"
            layout="@layout/putao_network_exception_layout"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>