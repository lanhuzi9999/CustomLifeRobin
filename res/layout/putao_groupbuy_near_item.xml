<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/putao_screen_background_light" />

    <TextView
        android:id="@+id/putao_near"
		android:textColor="@color/putao_text_color_indicative"
        android:background="@color/putao_white"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:text="@string/putao_group_buy_near"
        android:textSize="12sp" />

</LinearLayout>