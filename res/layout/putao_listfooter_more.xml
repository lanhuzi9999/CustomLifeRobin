<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <!-- android:background="@color/putao_pt_chat_bg" -->

	<View style="@style/putao_DividerStyle_Horizontal"/>

<!--     <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/putao_divider_line_size"
        android:background="@color/putao_yellow_page_line_color" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <RelativeLayout
            android:id="@+id/pull_to_refresh_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/putao_bg_loading_logo" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:indeterminate="true"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/putao_loading_animation" >
            </ProgressBar>
        </RelativeLayout>

        <TextView
            android:id="@+id/load_more"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="12dp"
            android:text="@string/putao_p2refresh_head_load_more"
            android:textColor="#ababab" >
        </TextView>
    </LinearLayout>

</RelativeLayout>