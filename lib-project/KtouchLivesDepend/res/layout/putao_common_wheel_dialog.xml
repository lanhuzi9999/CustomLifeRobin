<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/putao_popup_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/putao_dialog_leftandright_padding"
        android:paddingTop="@dimen/putao_dialog_leftandright_padding"
        android:textColor="@color/putao_dialog_title"
        android:textSize="@dimen/putao_dialog_head_textsize" />

    <View
        android:id="@+id/dialog_title_divider"
        style="@style/Theme.Ptui.Divider.Horizontal"
        android:background="@color/putao_transparent" />

    <LinearLayout
        android:id="@+id/wheel_container_ll"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:paddingLeft="@dimen/putao_dialog_leftandright_padding"
        android:paddingRight="@dimen/putao_dialog_leftandright_padding" >

        <so.contacts.hub.basefunction.widget.wheel.WheelView
            android:id="@+id/wheel_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1" >
        </so.contacts.hub.basefunction.widget.wheel.WheelView>

        <so.contacts.hub.basefunction.widget.wheel.WheelView
            android:id="@+id/wheel_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >
        </so.contacts.hub.basefunction.widget.wheel.WheelView>

        <so.contacts.hub.basefunction.widget.wheel.WheelView
            android:id="@+id/wheel_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >
        </so.contacts.hub.basefunction.widget.wheel.WheelView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/putao_dialog_bottom_height"
        android:layout_marginBottom="@dimen/putao_dialog_leftandright_padding"
        android:layout_marginTop="@dimen/putao_dialog_leftandright_padding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/putao_dialog_leftandright_padding"
        android:paddingRight="@dimen/putao_dialog_leftandright_padding" >

        <TextView
            android:id="@+id/dialog_bootom_cancel_btn"
            style="@style/Theme.Ptui.Button.White_Black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/putao_dialog_bottom_btn_height"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/putao_cancel" />

        <TextView
            android:id="@+id/dialog_bootom_ok_btn"
            style="@style/Theme.Ptui.Button.White_Black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/putao_dialog_bottom_btn_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/putao_dialog_leftandright_padding"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/putao_confirm" />
    </LinearLayout>

</LinearLayout>